<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "StockMaster" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= yield :head %>
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body class="bg-gray-50">
    <div class="min-h-screen">
      <nav class="bg-white shadow-sm border-b border-gray-200 w-full top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex justify-between h-16">
            <!-- Left side -->
            <div class="flex">
              <div class="flex-shrink-0 flex items-center">
                <%= link_to dashboard_root_path, class: "text-xl font-bold text-gray-900" do %>
                  StockMaster
                <% end %>
              </div>
            </div>
            <!-- Right side -->
            <div class="flex items-center space-x-4">
              <!-- Wallet Balance -->
              <div class="bg-gray-50 rounded-lg px-4 py-2">
                <span class="text-sm text-gray-500">Balance</span>
                <div class="font-semibold text-gray-900">
                  <%= number_to_currency(current_user.balance) %>
                </div>
              </div>
              <!-- Top Up Button -->
              <%= link_to new_dashboard_wallet_path, 
                  class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out" do %>
                <i data-lucide="plus-circle" class="w-4 h-4 mr-2"></i>
                Top Up
              <% end %>
              <!-- User Menu -->
              <div class="relative ml-3">
                <div class="flex items-center space-x-4">
                  <div class="text-sm">
                    <span class="text-gray-700"><%= current_user.full_name %></span>
                  </div>
                  <%= button_to destroy_user_session_path, 
                      method: :delete,
                      class: "text-sm text-gray-500 hover:text-gray-700" do %>
                    <i data-lucide="log-out" class="w-5 h-5"></i>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </nav>
      <main class="py-10">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <!-- Flash Messages -->
          <% if notice %>
            <div class="mb-4 rounded-md bg-blue-50 p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <i data-lucide="info" class="h-5 w-5 text-blue-400"></i>
                </div>
                <div class="ml-3">
                  <p class="text-sm font-medium text-blue-800"><%= notice %></p>
                </div>
              </div>
            </div>
          <% end %>
          <% if alert %>
            <div class="mb-4 rounded-md bg-red-50 p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <i data-lucide="alert-circle" class="h-5 w-5 text-red-400"></i>
                </div>
                <div class="ml-3">
                  <p class="text-sm font-medium text-red-800"><%= alert %></p>
                </div>
              </div>
            </div>
          <% end %>
          <%= yield %>
        </div>
      </main>
    </div>
    <main class="container mx-auto mt-28 px-5 flex">
      <nav class="bg-white border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex justify-between h-16">
            <!-- Other nav items... -->
            <div class="flex items-center space-x-4">
              <!-- Wallet Balance Display -->
              <%= turbo_frame_tag "wallet_balance" do %>
                <div class="bg-gray-50 rounded-lg px-4 py-2">
                  <span class="text-sm text-gray-500">Balance</span>
                  <div class="font-semibold text-gray-900">
                    <%= number_to_currency(current_user.balance) %>
                  </div>
                </div>
              <% end %>
              <!-- Top Up Button -->
              <%= link_to new_dashboard_wallet_path, 
            class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                </svg>
                Top Up
              <% end %>
            </div>
          </div>
        </div>
      </nav>
    </main>
  </body>
</html>
