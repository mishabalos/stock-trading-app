<!-- app/views/dashboard/index.html.erb -->
<div class="container mt-4">
  <h1>Trading Dashboard</h1>
  <div class="row mt-4">
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Account Balance</h5>
          <p class="card-text h2"><%= number_to_currency(current_user.balance) %></p>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Quick Actions</h5>
          <div class="d-grid gap-2 d-md-flex">
            <%= link_to "Search Stocks", stocks_intraday_path, class: "btn btn-primary" %>
            <%= link_to "View Portfolio", "#", class: "btn btn-secondary" %>
            <%= link_to "Transaction History", "#", class: "btn btn-info" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>