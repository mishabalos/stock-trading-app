<div class="max-w-2xl mx-auto p-6">
  <div class="bg-white rounded-lg shadow-lg">
    <div class="p-6">
      <h2 class="text-2xl font-bold text-gray-800 mb-6">Top Up Wallet</h2>
      <%= turbo_frame_tag "wallet_balance" do %>
        <div class="mb-8">
          <h5 class="text-gray-600 text-sm font-medium">Current Balance</h5>
          <p class="text-3xl font-bold text-blue-600"><%= number_to_currency(current_user.balance) %></p>
        </div>
      <% end %>
      <%= form_with(url: top_up_dashboard_wallets_path, local: true) do |f| %>
        <div class="mb-6">
          <%= f.label :amount, "Amount to Add", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="relative rounded-md shadow-sm">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <span class="text-gray-500 sm:text-sm">$</span>
            </div>
            <%= f.number_field :amount, 
                class: "block w-full pl-7 pr-12 py-2 rounded-md border-gray-300 focus:ring-blue-500 focus:border-blue-500", 
                min: 0.01, 
                step: "0.01", 
                required: true,
                placeholder: "Enter amount" %>
          </div>
        </div>
        <div class="space-y-3">
          <%= f.submit "Top Up", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition duration-150 ease-in-out" %>
          <%= link_to "Cancel", dashboard_root_path, class: "w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md text-gray-700 bg-white hover:bg-gray-50 font-medium text-center transition duration-150 ease-in-out" %>
        </div>
      <% end %>
    </div>
  </div>
</div>