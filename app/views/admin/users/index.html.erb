<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Status</th>
      <th>Balance</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= "#{user.first_name} #{user.last_name}" %></td>
        <td><%= user.email %></td>
        <td>
          <span class="badge <%= user.status? ? 'bg-success' : 'bg-warning' %>">
            <%= user.status? ? 'Approved' : 'Pending' %>
          </span>
        </td>
        <td><%= number_to_currency(user.balance) %></td>
        <td>
          <%= link_to "View", admin_user_path(user), class: "btn btn-info btn-sm" %>
          <%= link_to "Edit", edit_admin_user_path(user), class: "btn btn-primary btn-sm" %>
          <% unless user.status? %>
            <%= button_to "Approve", approve_admin_user_path(user), 
        method: :patch, 
        class: "btn btn-success btn-sm" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= button_to "Log Out", destroy_user_session_path, method: :delete, class: "inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 border border-input bg-black hover:bg-black/90 text-white h-10 px-4 py-2" %>
