<section class="py-16 bg-gray-100" data-controller="stock-slider">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-8">Featured Stocks</h2>
    <div class="flex items-center justify-center space-x-4">
      <button class="btn-outline-icon" data-action="click->stock-slider#previous">
        <svg class="h-4 w-4" data-lucide="chevron-left"></svg>
      </button>
      <% stocks.each_with_index do |stock, index| %>
        <div class="bg-white p-6 rounded-lg shadow-md w-full max-w-md"
             data-stock-slider-target="stockCard"
             data-index="<%= index %>"
             class="<%= index == 0 ? '' : 'hidden' %>">
          <h3 class="text-xl font-semibold mb-2"><%= stock[:name] %> (<%= stock[:symbol] %>)</h3>
          <p class="text-2xl font-bold text-blue-600 mb-4">$<%= number_with_precision(stock[:price], precision: 2) %></p>
          <div class="flex justify-between text-sm text-gray-600">
            <span>Volume: <%= stock[:volume] %></span>
            <span>Market Cap: <%= stock[:market_cap] %></span>
          </div>
        </div>
      <% end %>
      <button class="btn-outline-icon" data-action="click->stock-slider#next">
        <svg class="h-4 w-4" data-lucide="chevron-right"></svg>
      </button>
    </div>
  </div>
</section>